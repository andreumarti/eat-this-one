extends ../layout

block configuration
    - var controllerName = "DishesViewController"

block base
    base(href='../')

block logic

    div(ng-if='auth.isAuthenticated()')
        div(class='dish-useful-info')
            h4 {{dishusefulinfotext}}
        md-card
            div(ng-if='dish.photo', ng-click='showFullPhoto()', class='dish-photo')
                img(src='{{dish.photo}}')
                span(class='zoom-photo glyphicon glyphicon-zoom-in' aria-hidden='true')
            md-card-content
                h2(class='md-title') {{dish.name}}
                div(class='dish-info')
                    div(class='dish-field', ng-if='dish.description')
                        b {{lang.dishdescription}}
                        span {{dish.description}}
                    div(class='dish-field')
                        b {{lang.chef}}
                        span {{dish.user.name}}
                    div(class='dish-field')
                        b {{lang.when}}
                        span {{dish.when}}
                    div(class='dish-field')
                        b {{lang.expecteddonation}}
                        span {{dish.donation}}
        md-card(ng-if='showBookedMeals')
            md-card-content
                h2(class='md-title') {{lang.bookedmeals}}
                md-item-content(ng-repeat='meal in meals')
                    div
                        span(class='glyphicon glyphicon-user', aria-hidden='true')
                    div
                        h3 {{meal.user.name}}
